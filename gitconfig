[includeIf "gitdir:~/Fuckcode/"]
    path = ~/.git/github

[includeIf "gitdir:~/working/"]
    path = ~/.git/working

[credential]
    helper = store

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[pull]
    rebase = true

[push]
    followTags = true

[diff]
    submodule = log

[submodule]
    recurse = true

[http]
    proxy = http://127.0.0.1:10887

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[diff-so-fancy]
    markEmptyLines = true

